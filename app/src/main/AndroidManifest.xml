<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apple.gtdelivery">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />

        <activity
            android:name=".LoginActivityMain"
            android:label="@string/title_activity_login_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FoodChooserActivity" />
        <activity
            android:name=".OrderOrDeliver"
            android:label="@string/title_activity_order_or_deliver" />
        <activity
            android:name=".OrderSearchActivity"
            android:label="@string/title_activity_order_search" />
        <activity
            android:name=".LocationSelector"
            android:label="@string/title_activity_location_selector" />
        <activity
            android:name=".ConfirmOrder"
            android:label="@string/title_activity_confirm_order" />
        <activity
            android:name=".OrderChooserActivity"
            android:label="@string/title_activity_order_chooser" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_signup" />
        <activity android:name=".AddCardActivity" />
        <activity
            android:name=".orderInProgressActivity"
            android:label="@string/title_activity_order_in_progress" />
        <activity
            android:name=".dummyDeliveredActivty"
            android:label="@string/title_activity_dummy_delivered_activty" />
        <activity
            android:name=".ratingUserActivity"
            android:label="@string/title_activity_rating_user" />
        <activity
            android:name=".foundWaitingActivity"
            android:label="@string/title_activity_found_waiting"></activity>
    </application>

</manifest>
