<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/add_card_layout"
    tools:context="com.example.apple.gtdelivery.AddCardActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/card_number"
        android:layout_weight="1"
        android:hint="Card Number"
        android:layout_above="@+id/expiration_date"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:layout_alignEnd="@+id/expiration_date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expiration_date"
        android:hint="Expiration Date (11/2017)"
        android:layout_marginBottom="57dp"
        android:layout_above="@+id/cvc"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/cvc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/cvc"
        android:hint="CVC"
        android:layout_above="@+id/circleButton_addCard"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="83dp"
        android:layout_alignParentEnd="true" />

    <at.markushi.ui.CircleButton
        android:layout_gravity="center"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:id="@+id/circleButton_addCard"
        app:cb_color="@color/primaryPink"
        app:cb_pressedRingWidth="8dip"
        android:layout_marginBottom="38dp"
        android:src="@drawable/ic_tick"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
